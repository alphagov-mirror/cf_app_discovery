#!/usr/bin/env ruby

lib = File.expand_path("#{__dir__}/../lib")
$LOAD_PATH.unshift(lib)

require "bundler/setup"
require "cf_app_discovery"

CfAppDiscovery.run(
  api_endpoint: ENV.fetch("API_ENDPOINT"),
  uaa_endpoint: ENV.fetch("UAA_ENDPOINT"),
  uaa_username: ENV.fetch("UAA_USERNAME"),
  uaa_password: ENV.fetch("UAA_PASSWORD"),
  paas_domain:  ENV.fetch("PAAS_DOMAIN"),
  targets_path: ENV.fetch("TARGETS_PATH"),
)
